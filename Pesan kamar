            int Diskon = (familyRoom*menginap);
                System.out.println("Total Harga = Rp."+ Diskon);
                System.out.println("Bagaimana anda ingin membayar? ");
                System.out.println("1. Dengan Tunai.");
                System.out.println("2. Dengan Kredit.");
                System.out.print("Pilihan anda: ");
                int pilih = saya.nextInt();
                if(pilih == 1){
                System.out.print("Uang yang anda Masukkan = ");
                int bayar = saya.nextInt();
                int kurang = bayar - Diskon;
                    if(bayar == Diskon){
                        System.out.println("Uang anda pas");
                    }else if (bayar > Diskon){
                        int kembalian = bayar - Diskon;
                        System.out.println("Kembalian anda Rp." + kembalian);
                    }else{
                        System.out.println("Maaf, uang anda kurang " + kurang);
                        System.out.print("Masukkan tambahan uang: ");
                        int tambah = saya.nextInt();
                        int selisih = tambah + kurang;
                        while(selisih != 0){
                            if(selisih < 0){
                            System.out.println("Uang yang anda masukkan masih kurang");
                            System.out.print("Masukkan tambahan uang: ");
                            int tambah1 = saya.nextInt();
                            selisih = selisih + tambah1;
                            }else if(selisih > 0){
                                System.out.println("Kembalian " + selisih);
                                selisih = 0;
                        }
                        }
                        System.out.println("Selesai!");
                    }
                }else{
                    System.out.print("Masukkan nomor rekening = ");
                    Double norek = saya.nextDouble();
                }
            }
