    private void butPesanActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        String tampil;
        tampil = "";
        int bayar = 0;
        
        if(cbNasiGoreng.isSelected()){
            int jumlah;
            jumlah = Integer.parseInt(txtjumlah1.getText());
            int total;
            total = jumlah * 15000;
            bayar += total;
            tampil += cbNasiGoreng.getText() + " Rp. 15.000" + " x " + jumlah + " = " + total + "\n";
        } if(cbMieAceh.isSelected()){
            int jumlah;
            jumlah = Integer.parseInt(txtjumlah2.getText());
            int total;
            total = jumlah * 18000;
            bayar += total;
            tampil += cbMieAceh.getText() + " Rp. 18.000" + " x " + jumlah + " = " + total + "\n";
        } if(cbBuburAyam.isSelected()){
            int jumlah;
            jumlah = Integer.parseInt(txtjumlah3.getText());
            int total;
            total = jumlah * 12000;
            bayar += total;
            tampil += cbBuburAyam.getText() + " Rp. 12.000" + " x " + jumlah + " = " + total + "\n";
        } if(cbBurger.isSelected()){
            int jumlah;
            jumlah = Integer.parseInt(txtjumlah4.getText());
            int total;
            total = jumlah * 15000;
            bayar += total;
            tampil += cbBurger.getText() + " Rp. 15.000" + " x " + jumlah + " = " + total + "\n";
        } if(cbPizza.isSelected()){
            int jumlah;
            jumlah = Integer.parseInt(txtjumlah5.getText());
            int total;
            total = jumlah * 40000;
            bayar += total;
            tampil += cbPizza.getText() + " Rp. 40.000" + " x " + jumlah + " = " + total + "\n"; 
        } if(cbJusJeruk.isSelected()){
            int jumlah;
            jumlah = Integer.parseInt(txtjumlah6.getText());
            int total;
            total = jumlah * 12000;
            bayar += total;
            tampil += cbJusJeruk.getText() + " Rp. 12.000" + " x " + jumlah + " = " + total + "\n";
        } if(cbJusMangga.isSelected()){
            int jumlah;
            jumlah = Integer.parseInt(txtjumlah7.getText());
            int total;
            total = jumlah * 15000;
            bayar += total;
            tampil += cbJusMangga.getText() + " Rp. 15.000" + " x " + jumlah + " = " + total + "\n";
        } if(cbIceTea.isSelected()){
            int jumlah;
            jumlah = Integer.parseInt(txtjumlah8.getText());
            int total;
            total = jumlah * 6000;
            bayar += total;
            tampil += cbIceTea.getText() + " Rp. 6.000" + " x " + jumlah + " = " + total + "\n";
        } if(cbIceCap.isSelected()){
            int jumlah;
            jumlah = Integer.parseInt(txtjumlah9.getText());
            int total;
            total = jumlah * 12000;
            bayar += total;
            tampil += cbIceCap.getText() + " Rp. 12.000" + " x " + jumlah + " = " + total + "\n";
        } if(cbKopi.isSelected()){
            int jumlah;
            jumlah = Integer.parseInt(txtjumlah10.getText());
            int total;
            total = jumlah * 5000;
            bayar += total;
            tampil += cbKopi.getText() + " Rp. 5.000" + " x " + jumlah + " = " + total + "\n";
        }
        txtTampilan.setText(tampil + "======================" + "\n" + "Total Bayar = Rp." + bayar);
    }                                        

    private void butResetActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        txtjumlah1.setText("");
        txtjumlah2.setText("");
        txtjumlah3.setText("");
        txtjumlah4.setText("");
        txtjumlah5.setText("");
        txtjumlah6.setText("");
        txtjumlah7.setText("");
        txtjumlah8.setText("");
        txtjumlah9.setText("");
        txtjumlah10.setText("");
    }                                        

