import java.io.File;
import java.io.FileNotFoundException;
import java.util.Scanner;


public class checkOut extends pesanKamar{

    public static void main(String[] args) {
        String name;
        String pilih;
        Scanner scan = new Scanner(System.in);
        

        System.out.print("Masukkan nama anda : ");
        name = scan.nextLine();

        // Try-Catch untuk mengatasi error jika file yang dimaksud  tidak ditemuan
        try{
            
            //Inisialisasi Objek dan Mendefinisikan nama file yang akan dibaca
            File file = new File("testout.txt");
            
            //Inisialisasi Objek Scanner dan memasang objek file yang akan dibaca
            Scanner cek = new Scanner(file);
            
            //Membuat perulangan untuk membaca semua data didalam objek Scanner
            while(cek.hasNextLine()){
                String getDataString = cek.nextLine();
                System.out.println(getDataString);
            }
            
            cek.close();
        }catch(FileNotFoundException ex){
            System.out.println("File Tidak Ditemukan"); 
        }
        
        
        System.out.print("Apakah anda memesan layanan kamar sebelumnya?(ya/tidak) :");
        pilih = scan.nextLine();

        if (pilih.equalsIgnoreCase("ya")) {
            System.out.println("Berikut adalah rincian dari total harga layanan kamar");
        } else { 
            System.out.print("Apakah anda ingin memesan kamar lagi?(ya/tidak) :");
            pilih =scan.nextLine(); 

             if ( pilih.equalsIgnoreCase("ya")) {
                Scanner saya = new Scanner (System.in);
                pesanKamar pesan = new pesanKamar();
                
                } else {
                    System.out.println("-------------------------------------------------");
                    System.out.println("Terima kasih sudah memakai layanan kami,see you!!");
                    System.out.println("-------------------------------------------------");
                }



             }   
                 
             
        }

    }
