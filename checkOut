import java.io.File;
import java.io.FileNotFoundException;
import java.util.Scanner;

public class checkOut {

    public void inputData() {
        String name;
        int nomorKamar;
        Scanner scan = new Scanner(System.in);

        System.out.print("Masukkan nama anda : ");
        name = scan.nextLine();

        System.out.print("Masukkan nomor kamar anda : ");
        nomorKamar = scan.nextInt();

         }

    public void cekData(){
        String fileName = "scr/namaFile" ; 
        
        try {
            // Membaca file
            File myFile = new File(fileName); // (fileName)--> nama filenya nanti
            Scanner fileReader = new Scanner(myFile);
        }
        
        catch (FileNotFoundException e) {
            System.out.println("Terjadi Kesalahan saat membaca file yang diinginkan: " + e.getMessage());
            e.printStackTrace();
        }
    }
}
        
