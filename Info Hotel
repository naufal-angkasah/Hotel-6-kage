import java.util.ArrayList;
import java.util.List;
import javax.swing.JFrame;
import javax.swing.JScrollPane;
import javax.swing.JTable;
import javax.swing.table.DefaultTableModel;

public class InformasiKamar extends JFrame{

    public InformasiKamar() {
        setTitle("Infomasi Kamar Hotel-6-Kage");
        setSize(350, 200);
        setDefaultCloseOperation(EXIT_ON_CLOSE);
        setLocationRelativeTo(null);
        userInterfaceGUI();
        setVisible(true);
    }
    
    private void userInterfaceGUI(){
        DefaultTableModel model = new DefaultTableModel();
        model.setColumnIdentifiers(new Object[]{
            "ROOM TYPE", "FACILITIES", "RATE"
        });
        JTable tabel = new JTable(model);
        
        List<Object> list = new ArrayList<>();
        list.add(new Object[]{"Family Room", " 1 King Bed \n 2 Single bed \n Televisi", "2.700.000"});
        list.add(new Object[]{"Executif Room", " 1 King Bed \n 2 Single bed \n Televisi", "1.500.000"});
        list.add(new Object[]{"Deluxe Room", " 1 King Bed \n 2 Single bed \n Televisi", "750.000"});
        list.add(new Object[]{"Standard Room", " 1 King Bed \n 2 Single bed \n Televisi", "650.000"});
        
        for(Object obj : list){
            model.addRow((Object[]) obj);
        }

        JScrollPane scroll = new JScrollPane();
        scroll.setViewportView(tabel);
        
        getContentPane().add(scroll);
    }
    
    public static void main(String []args){
        InformasiKamar obj = new InformasiKamar();
    }
}
