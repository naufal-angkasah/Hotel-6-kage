    private void userInterfaceGUI(){
        DefaultTableModel model = new DefaultTableModel();
        model.setColumnIdentifiers(new Object[]{
            "ROOM TYPE", "FACILITIES", "RATE"
        });
        JTable tabel = new JTable(model);
        
        List<Object> list = new ArrayList<>();
        list.add(new Object[]{"Family Room", " 1 King Bed, \n 3 Single bed, \n Sofa, \n Lemari Pakaian, \n Ruang Tamu, \n Mini Pantry, \n Televisi", "2.700.000"});
        list.add(new Object[]{"Executif Room", " 1 King Bed, \n 2 Single bed, \n Sofa, \n Lemari Pakaian, \n Televisi", "1.500.000"});
        list.add(new Object[]{"Deluxe Room", " 1 King Bed, \n 1 Single bed, \n Sofa, \n Lemari Pakaian, \n Televisi", "750.000"});
        list.add(new Object[]{"Standard Room", " 1 King Bed, \n Televisi", "650.000"});
        
        for(Object obj : list){
            model.addRow((Object[]) obj);
        }

        JScrollPane scroll = new JScrollPane();
        scroll.setViewportView(tabel);
        
        getContentPane().add(scroll);
    }
    
    public static void main(String []args){
        InformasiKamar obj = new InformasiKamar();
        obj.setVisible(true);
    }
    
    private javax.swing.JButton Kembali;
}
